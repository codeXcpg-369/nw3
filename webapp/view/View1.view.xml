<mvc:View
    controllerName="app.nwp3.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:comp="sap.ui.comp.filterbar"
    xmlns:l="sap.ui.layout"

    xmlns="sap.m"
>
    <Page
        id="page"
        title="Northwind Products"
    >
        <content> 
            <comp:FilterBar id="_IDGenFilterBar" class="filterBar">
            
                <comp:filterItems>

                    <comp:FilterItem id="_IDGenFilterItem1" name="Sorting">                    
                    <comp:control>
                        <HBox id="_IDGenHBox" width="100%" justifyContent="End" alignItems="End">
                        <layoutData>
                            <l:GridData id="_IDGenGridData" span="L1 M2 S12"/>
                        </layoutData>
                        <Button id="_IDGenButton" icon="sap-icon://sort"
                                type="Transparent"
                                tooltip="Sort"
                                press="onSort"/>
                        </HBox>
                    </comp:control>


                    </comp:FilterItem>

                    <comp:FilterItem id="_IDGenFilterItem2" name="Search by Product Name">
                        <comp:control>
                            <Input
                                id="idFilterloc"
                                placeholder="Search by Product Name"
                                liveChange="onSearch"
                            />
                        </comp:control>
                    </comp:FilterItem>


                    <comp:FilterItem id="_IDGenFilterItem3" name="Search by Supplier">
                        <comp:control>
                            <Input
                                id="idFilterdesc"
                                placeholder="Search by Supplier"
                                liveChange="onSearch"
                            />
                        </comp:control>
                    </comp:FilterItem>
                    <comp:FilterItem id="_IDGenFilterItem4" name="Search by Category">
                        <comp:control>
                            <Input
                                id="idFilterCat"
                                placeholder="Search by Category"
                                liveChange="onSearch"
                            />
                        </comp:control>
                    </comp:FilterItem>
                



                </comp:filterItems>
                
            </comp:FilterBar>
            

            <List
                id="productsList"
                growing="true"
                growingScrollToLoad="true"
                items="{
              path: '/Products',
              parameters: { expand: 'Category,Supplier' }
            }"
            >
                <items>

                    <ObjectListItem id="_IDGenObjectListItem"
                        type="Navigation"
                        
                        press=".onProductPress"
                        title="{ProductName}"
                        

            icon="{
              path: 'Category/Picture',
              formatter: '.formatter.categoryIconDataUri'
            }"



            iconDensityAware="false"

                        number="{
                path: 'UnitPrice',
                formatter: '.formatter.usdToInr'
              }"
                        numberUnit="INR"
                    >          

                        <attributes>
                            <ObjectAttribute id="_IDGenObjectAttribute"
                                text="Category: {Category/CategoryName}"
                            />
                            <ObjectAttribute id="_IDGenObjectAttribute1"
                                text="Supplier: {Supplier/CompanyName}"
                            />
                        </attributes>
                        <firstStatus>
                            <ObjectStatus id="_IDGenObjectStatus"
                                text="In Stock: {UnitsInStock}"
                                state="Success"
                            />
                        </firstStatus>


                    </ObjectListItem>

                  
                </items>
            </List>
        </content>
    </Page>
</mvc:View>





